.header{
  display: flex;
  flex-direction: row;
  padding: 10rpx;
}
.header image{
  width: 60rpx;
  height: 60rpx;
}
.search{
  border: 1rpx solid #ddd;
  border-radius: 5rpx;
  text-align: center;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  flex: 1;
  margin: 0 20rpx;
  color: #F01313;
}
.scroll{
  display: flex;
  white-space: nowrap;
  font-size: 30rpx;
  height: 80rpx;
  box-sizing: content-box;
}
.navigate{
  padding: 20rpx;
}
.act{
  padding: 10rpx 0;
}
.video{
  padding: 20rpx;
}
.active{
  border-bottom: 5rpx solid #F01313;
}
.videoscroll{
  height: calc(100% - 160rpx);
  width: 100%;
}
.videoscroll video{
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}
.content {
  font-size: 26rpx;
  height:80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer  .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.footer .comments_praised {
  float: right;
}

.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}

.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}
